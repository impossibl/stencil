$macro test(*params) [header,content,footer] {
	$foreach param in params {
		$param.key; = $param.value;
	};
	<div>
	  <div class="header">
	    $header;
	  </div>
	  <div class="content">
	    $content;
	  </div>
	  <div class="footer">
	    $footer;
	  </div>
	</div>
};

